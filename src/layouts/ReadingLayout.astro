---
import '@styles/global.css'
---

<div class="reading-layout container-lg">
    <nav>
        <ul>
            <li>Some link</li>
        </ul>
    </nav>
    <main class="container">
        <slot />
    </main>
    <div class="sidebar">
        <h1>This is sidebar</h1>
    </div>
</div>
<style>
    .reading-layout {
        margin: 0 auto;
        display: flex;
        flex-direction: column;
    }
    main {
        margin: 0;
        padding: 0 3em;
    }
    nav {
        order: 0;
    }
    .sidebar {
        order: 1;
    }
    main {
        order: 2;
    }
</style>
