---
import {literal} from 'astro:schema'
import '../styles/global.css'
type Socials = {platform: string; url: string}[]

const socials: Socials = [
    {
        platform: 'GitHub,',
        url: 'https://github.com/akbarsanihasan',
    },
    {
        platform: 'Instagram.',
        url: 'https://instagram.com/akbarsanihasan',
    },
]
const projects = [
    {
        name: 'Politikuang',
        url: 'https://github.com/akbarsanihasan/politik-uang',
        category: 'Application',
    },
    {
        name: 'Punokawan',
        url: 'https://github.com/akbarsanihasan/punokawan',
        category: 'Game Engine',
    },
]
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Akbar Sani Hasan</title>
    </head>
    <body>
        <div class="container-lg">
            <header>
                <nav>
                    <ul class="pages">
                        <li>
                            <a class="effect-shine" href="/works">Works,</a>
                        </li>
                        <li><a class="effect-shine" href="/blog">Blogs,</a></li>
                        <li>
                            <a class="effect-shine" href="/about">About.</a>
                        </li>
                    </ul>
                </nav>
                <ul class="socials">
                    {
                        socials.map((social) => (
                            <li>
                                <a
                                    class="effect-underline"
                                    href={social.url}
                                    target="_blank"
                                >
                                    {social.platform}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </header>
            <main>
                <section class="intro">
                    <div class="headline">
                        <h1 class="brand text-2xl text-serif">
                            Akbar Sani Hasan.
                        </h1>
                        <p class="tagline text-lg">
                            Software engineer focusing on performance, <span
                                class="text-lg text-serif-italic"
                                >simplicity</span
                            >, and freedom.
                        </p>
                        <div class="contact">
                            <a class="effect-underline">Resume,</a>
                            <a class="effect-underline"
                                >akbarsanihasan@gmail.com.</a
                            >
                        </div>
                    </div>
                    <div class="experience">
                        <h3 class="text-md">
                            Internship / CV.Karya Hidup Sentosa
                        </h3>
                        <span class="text-sans-italic"
                            >1 year / March 2020 - March 2022</span
                        >
                        <p>
                            Developing and maintaining <span
                                class="text-sans-italic"
                                >Enterprise Resource Planning</span
                            > using PHP(CI3), JQuery, and SQL database
                        </p>
                        <a href="" class="effect-underline">Read more</a>
                    </div>
                </section>
                <section class="pro">
                    <div class="featured-project">
                        <span class="title"
                            ><a href="" class="effect-underline text-md"
                                >Featured Project</a
                            ></span
                        >
                        <ul class="projects">
                            {
                                projects.map((project) => (
                                    <li>
                                        <span>
                                            <a
                                                href="{project.platform}"
                                                class="effect-shine"
                                            >
                                                {project.name}
                                            </a>{' '}
                                            / {project.category}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                    <div class="latest-article"></div>
                </section>
            </main>
        </div>
    </body>
</html>

<style>
    .container-lg {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    header {
        height: 24vh;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }
    header nav {
        order: 1;
    }
    header nav .pages {
        margin: 0;
        padding: 0;
        height: 100%;
        display: flex;
        justify-content: space-between;
    }
    header .socials {
        order: 3;
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
    }
    header .socials li:not(:last-child) {
        margin-right: 0.8rem;
    }
    header .status {
        order: 2;
    }
    main {
        display: flex;
        flex-direction: column;
    }
    main section.intro {
        display: flex;
        flex-direction: column;
    }
    main section.intro .headline {
        margin-bottom: 0.8rem;
    }
    main section.intro .headline h1.brand {
        margin: 0;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }
    main section.intro .headline p.tagline {
        margin: 0;
        padding: 0;
        backgound: red;
        margin-bottom: 0.8rem;
        width: min(100%, 678px);
    }
    main section.intro .contact {
        display: flex;
        flex-direction: column;
        align-items: start;
    }
    main section.intro .contact a {
        margin: 0.3rem 0;
    }
    main section.intro .experience {
        width: min(100%, 550px);
    }
    main section.intro .experience h3 {
        margin: 0.8rem 0;
    }
    main section.intro .experience p {
        text-align: justify;
    }
    main section.pro {
        margin-top: 6vh;
    }
    main section.pro .featured-project .title a {
        font-weight: 600;
    }
    main section.pro .featured-project .projects {
        margin: 0;
        padding: 0;
        list-style: none;
    }
    main section.pro .projects li {
        margin: 0.8rem 0;
        padding: 0;
    }
    @media screen and (min-width: 1000px) {
        header {
            flex-direction: row;
            justify-content: space-between;
        }
        header {
            align-items: center;
        }
        header nav .pages,
        header .socials {
            justify-content: unset;
        }
        header nav .pages li:not(:last-child) {
            margin-right: 0.8rem;
        }
        main section.intro {
            flex-direction: row;
            justify-content: space-between;
            align-items: start;
        }
        main section.intro .headline {
            margin-right: 2rem;
        }
        main section.intro .headline h1.brand {
            margin: 0;
        }
        main section.intro .contact {
            flex-direction: row;
        }
        main section.intro .contact a:not(:last-child) {
            margin-right: 0.8rem;
        }
        main section.intro .experience h3 {
            margin-top: 0;
        }
    }
</style>
